<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "erro(s)") %> impediram este Post de ser salvo:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% if user_signed_in? %>
  <div class="field">
  <h3><%= current_user.nome %></h3>
<% else %>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
<% end %>
  <div class="field">
    <%= f.label :content, "Mensagem" %><br>
    <%= f.text_area :content, cols: 50, rows: 3 %>
  </div>
  <div class="actions center">
    <%= f.submit "Blogar!", class: "btn btn-lg btn-custom" %>
  </div>
<% end %>
